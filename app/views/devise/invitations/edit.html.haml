/ Page Heading
.d-sm-flex.align-items-center.justify-content-between.mb-4
  %h3.h3.mb-0.text-gray-800
    = t "devise.invitations.edit.header"

= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  = f.hidden_field :invitation_token
  .form-inputs
    = f.input :username, autofocus: true, hint: "(Warning: You can only set this once. Once Set cannot be changed!)", input_html: {class: "form-control form-control-sm"}
    = f.input :password, input_html: {class: "form-control form-control-sm"}
    = f.input :password_confirmation, input_html: {class: "form-control form-control-sm"}
  .form-actions
    = f.button :submit, t("devise.invitations.edit.submit_button"), class: "d-none d-sm-inline-block btn btn-md btn-primary shadow-sm px-3 my-3"
